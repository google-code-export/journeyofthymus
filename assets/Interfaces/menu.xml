<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
<useStyles filename="nifty-default-styles.xml" />
<useControls filename="nifty-default-controls.xml" />   
    <screen id="start" controller="states.MenuState">
        <layer id="background" backgroundColor="#0000" childLayout="center">
            <image filename="Interface/Journey of Thymus BG.jpg" width="100%" height="100%" />
        </layer>
        <layer id="foreground" backgroundColor="#0000" childLayout="center">
            <panel id="menu" height="100%" width="10%" align="center" childLayout="vertical" backgroundColor="#0000">  
                <panel id="panelEmpty" height="34%" width="100%" align="center" childLayout="center" backgroundColor="#0000">  
                </panel>
                <panel id="panelPlay" height="22%" width="100%" align="center" childLayout="center" backgroundColor="#0000">  
                    <control name="button" label="Play" id="playButton" align="center" valign="center" visibleToMouse="true">
                        <interact onClick="start(hud)" />
                    </control>
                </panel>
                <panel id="panelOptions" height="22%" width="100%" align="center" childLayout="horizontal" backgroundColor="#0000">  
                    <panel id="optionsText" height="100%" width="80%" align="right" valign="center" childLayout="center" backgroundColor="#0000">  
                        <text text="Enable debug shapes" font="Interface/Fonts/ComicSansMS.fnt" />
                    </panel>
                    <panel id="optionsCheckbox" height="100%" width="20%" align="left" valign="center" childLayout="center" backgroundColor="#0000">  
                        <control name="checkbox" id="debugShapeCheckbox" checked="false" />
                    </panel>
                </panel>
                <panel id="panelExit" height="22%" width="100%" align="center" childLayout="center" backgroundColor="#0000">  
                    <control name="button" label="Exit" id="exitButton" align="center" valign="center">
                        <interact onClick="quit()" />
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
    <screen id="hud" controller="states.GameState">
        <!-- ... -->
    </screen>
</nifty>
