<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />

    <screen id="map"> <!-- controller="mygame.Main"-->
        <layer childLayout="absolute"  >
            <panel width="210" height="150" childLayout="vertical" id="MapImage" backgroundImage="Interface/maze.png">
                <panel width="0" height="0"/>
                <image id="RowPos" height="1"  width="10" backgroundImage="Interface/space.png"/>
                <panel height="21" childLayout="horizontal">
                    <panel  width="0" height="0"/>
                        <image id="ColPos" height="10" width="15" backgroundImage="Interface/space.png" />
                    <panel width="10" height="10" backgroundImage="Interface/playerLoc.png" />
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
