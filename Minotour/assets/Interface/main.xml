<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />

    <screen id="ConfirmQuit">
        <layer childLayout="center"  >
            <panel width="700" height="400" childLayout="vertical" backgroundImage="Interface/mainMenu.png">
                <panel height="180px" />
                <panel height="21px" childLayout="horizontal">
                    <panel width="100" />
                    <control  name="button" label="Start the Game" id="StartGame" width="150" visibleToMouse="true">
                        <interact onClick="startGame()"/>
                    </control>
                </panel>
                <panel height="30px" />
                <panel height="50px" childLayout="horizontal">
                    <panel width="100" />
                    <control name="button" label="How to Play" id="HelpGame" width="150" visibleToMouse="true">
                        <interact onClick="helpGame()"/>
                    </control>
                </panel>
                 <panel height="20px" />
                <panel height="50px" childLayout="horizontal">
                    <panel width="100" />
                    <control name="button" label="Abort" id="ExitGame" width="150" visibleToMouse="true">
                        <interact onClick="quitGame()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
