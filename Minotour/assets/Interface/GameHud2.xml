<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />

    <screen id="ConfirmQuit">
        <layer childLayout="center"  >
            <panel width="230" height="135" childLayout="vertical" backgroundImage="Interface/confirmQuit.png">
                <panel height="80px" />
                <panel height="21px" childLayout="horizontal">
                    <panel width="40" />
                    <control  name="button" label="Yes" id="quitYes" width="60" visibleToMouse="true">
                        <interact onClick="continueGame()"/>
                    </control>
                    <panel width="30" />
                    <control name="button" label="No" id="quitNo" width="60" visibleToMouse="true">
                        <interact onClick="quitGame()"/>
                    </control>
                </panel>
            </panel>
         </layer>
    </screen>

    <screen id="hudScreen">
        <layer childLayout="horizontal" valign="bottom">
            <panel width="1024" height="50" childLayout="vertical" backgroundImage="Interface/hud.png">
                <panel height="10px" />
                <panel height="21px" childLayout="horizontal">
                    <!--  Time ellapsed taken away 
                    (I intend not to delete this portion for versioning purposes, it may be used in the future)
                    <panel width="3" />
                    <control name="label" color="#fff" text="Time:" height="30" width="50"/>
                    <panel childLayout="center" backgroundImage="Interface/time.png" height="30" width="100">
                         <control id="timer" name="label" color="#fff" text="00:00:00"/>
                         <text text="${CALL.getPlayerName()}'s Cool Game" font="Interface/Fonts/Default.fnt" width="100%" height="100%" />
                    </panel>-->

                    <!--Health Packs area-->
                    <panel width="30" />
                    <image id="hp1" filename="Interface/hPack.png"/>
                    <panel width="5" />
                    <image id="hp2" filename="Interface/hPack.png"/>
                    <panel width="5" />
                    <image id="hp3" filename="Interface/hPack.png"/>
                    <panel width="5" />
                    <image id="hp4" filename="Interface/hPack.png"/>
                    <panel width="5" />
                    <image id="hp5" filename="Interface/hPack.png"/>
                    
                    <!--Life progress bar area-->
                    <panel width="30" />
                    <panel width="516" height="30" childLayout="vertical" backgroundImage="Interface/lpframe.png">
                        <panel height="7px" />
                        <panel height="15px" width="500px" childLayout="horizontal">
                            <panel width="7" />
                            <image id="lifeBar" x="0" y="0" filename="Interface/lpbar.png" width="100%" height="15px"/>
                        </panel>
                    </panel>

                    <!--Plasma Cells area-->
                    <panel width="30px" />
                    <image id="pc1" filename="Interface/pcEmpty.png"/>
                    <panel width="8" />
                    <image id="pc2" filename="Interface/pcEmpty.png"/>
                    <panel width="8" />
                    <image id="pc3" filename="Interface/pcEmpty.png"/>
                    <panel width="8" />
                    <image id="pc4" filename="Interface/pcEmpty.png"/>
                    <panel width="8" />
                    <image id="pc5" filename="Interface/pcEmpty.png"/>
                    <panel width="8" />
                    <image id="pc6" filename="Interface/pcEmpty.png"/>
                    <panel width="8" />
                    <image id="pc7" filename="Interface/pcEmpty.png"/>
                    <panel width="8" />
                    <image id="pc8" filename="Interface/pcEmpty.png"/>
                    <panel width="8" />
                    <image id="pc9" filename="Interface/pcEmpty.png"/>
                    <panel width="8" />
                    <image id="pc10" filename="Interface/pcEmpty.png"/>
                    <!--control id="txtLife" name="label" color="#fff" text="hello" /-->
             </panel>
            </panel>
            
        </layer>
    </screen>
</nifty>
